                            <input type="number" id="phone" class="form-control" placeholder="Phone" required minlength="9">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <input type="password" id="pass" name="password" class="form-control" placeholder="Password" required>
                        </div>
