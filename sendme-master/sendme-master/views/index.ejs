                    </div>
                    <div class="row">
                        <div class="col">
                            <input type="text" id="city" class="form-control" placeholder="City" required>
                        </div>
                        <div class="col">
                            <input type="text" id='state' class="form-control" placeholder="State" required>
                        </div>
                        <div class="col">
                            <input type="number" id="zip" class="form-control" placeholder="Zip" required minlength="4">
                        </div>
                    </div>
                    <br>
                    <p>
                        <input type="checkbox" required>I accept the <a href='/terms'>terms</a> of service.
                    </p>
                    <br>
                    <button type="submit" class="btn btn-primary">Register</button>
                    <br><br>
                    <span id="not"></span>
                </form>
            </div>
            <div class="hide" id="zy">
                <form method="post" class="sForm" onsubmit="login(); return false;" id="cd">
                    <h4>Welcome back</h4>
                    <div class="form-group">
                        <label for="email-login">Email</label>
                        <input type="email" class="form-control" required placeholder="Enter Email" id="email-login" >
                    </div>
                    <div class="form-group">
                        <label for="pass-login">Password</label>
                        <input type="password" id="pass-login" class="form-control" required placeholder="Enter Password">
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                    <br><br>
                    <span id="not"></span>
                </form>
            </div>
        </div>
